@model IEnumerable<cadastro_de_dev.Models.Empresa>

@{
    ViewData["Title"] = "Lista de Empresas";
}

<style>
    * {
        margin: 0;
        border: 0;
        padding: 0;
    }

    .bottom {
        margin: 0 10px 0 10px;
    }

    a, a:link, a:hover, a:visited {
        text-decoration: none;
    }

    ul, ol, li {
        list-style: none;
    }

    body {
        background-color: #212121;
    }

    span, li, h1, button, a {
        font-family: Arial, Helvetica, sans-serif;
        color: #ffff;
        font-size: 16px;
        font-weight: 500;
    }

    span, li, button, a {
        font-size: 16px;
        font-weight: 500;
    }

    h1 {
        font-size: 22px;
        font-weight: 700;
    }

    li {
        margin: 0 0 0 10px;
    }

    tr, td {
        color: white;
    }

    .table-center {
        border-collapse: separate;
        border-spacing: 50px 10px;
    }

    .global-list {
        margin: 60px auto;
    }

    .dev-info {
        border: 2px solid #d1cece;
        width: 100%;
        padding: 20px 10px;
    }

        .dev-info:not(#fist-dev) {
            margin: 40px 0 0 0;
        }

    button {
        background-color: #24B32B;
        padding: 10px 20px;
        margin-bottom: 10px;
    }

    a:hover {
        color: #ffffff;
    }

    @@media screen and (min-width: 500px) {
        .global-list {
            width: 500px;
        }

        input {
            width: 680px;
        }
    }
</style>
<div class="global-list">
    <h1 style="text-align:center; font-size:x-large">
        EMPRESAS
    </h1>
    <div id="first-dev" class="dev-info">
        <div class="text-center">
            <table class="table-center">
                <thead>
                    <tr>
                        <th>
                            Nome da Empresa
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeEmpresa)
                                <span></span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.EmpresaID">Detalhes</a> |
                                <a asp-action="Edit" asp-route-id="@item.EmpresaID">Editar</a> |
                                <a asp-action="Delete" asp-route-id="@item.EmpresaID">Excluir</a> |
                                <a asp-action="ShowDevs" asp-route-id="@item.EmpresaID">Mostrar Desenvolvedores por Empresa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <div class="mt-4 text-center">
        <button class="bottom">
            <a asp-area="" asp-controller="Empresa" asp-action="Create">
                Cadastrar Nova Empresa
            </a>
        </button>
        <button class="bottom">
            <a asp-area="" asp-controller="Desenvolvedor" asp-action="Index">
                Voltar
            </a>
        </button>
    </div>
</div>