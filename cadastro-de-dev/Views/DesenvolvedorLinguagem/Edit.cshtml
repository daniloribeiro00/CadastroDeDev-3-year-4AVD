@model cadastro_de_dev.Models.DesenvolvedorLinguagem

@{
    ViewData["Title"] = "Alterar Atribuição";
}

<style>
    * {
        margin: 0;
        border: 0;
        padding: 0;
    }

    #select1, #select2 {
        border-radius: 0px;
        height: 42px;
        padding: 5px 3px;
        font-family: Arial, Helvetica, sans-serif;
        line-height: 1.8;
        font-size: 18px;
    }

    a, a:link, a:hover, a:visited {
        text-decoration: none;
    }

    ul, ol, li {
        list-style: none;
    }

    body {
        background-color: #212121;
    }

    .global-home {
        margin: 60px auto;
        border: 2px solid #d1cece;
        padding: 20px 30px;
        width: 100%;
    }

    label, span, button, h1, input, select, a {
        font-family: Arial, Helvetica, sans-serif;
        line-height: 1.8;
    }

    label, span, button, input, select, a {
        font-size: 18px;
        font-weight: 500;
    }

    label, span, button, h1, a {
        color: #ffffff;
    }

    h1 {
        font-size: 22px;
        font-weight: 700;
    }

    button {
        background-color: #24B32B;
        padding: 10px 20px;
    }

    input, select {
        padding: 5px 3px;
        margin-right: 10px;
    }

    input {
        width: 99%;
    }

    a:hover {
        color: #ffffff;
    }

    @@media screen and (max-width: 400px) {
        select {
            margin: 10px 0 10px 0;
        }
    }

    @@media screen and (min-width: 800px) {
        .global-home {
            width: 710px;
        }

        input {
            width: 645px;
        }
    }
</style>
<div class="global-home">
    <div class="text-center">
        <h1>
            Editar Atribuição
        </h1>
    </div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DesenvolvedorID" class="control-label">Desenvolvedor</label>
            <select disabled asp-for="DesenvolvedorID" id="select1" class="form-control" asp-items="@(new SelectList(ViewBag.Desenvolvedores, "DesenvolvedorID", "Nome"))"></select>
        </div>
        <div class="form-group">
            <label asp-for="LinguagemID" class="control-label">Linguagem</label>
            <select asp-for="LinguagemID" id="select2" class="form-control" asp-items="@(new SelectList(ViewBag.Linguagens, "LinguagemID", "NomeLinguagem"))"></select>
        </div>

        <div class="mt-4 d-flex flex-row justify-content-around">
            <button type="submit">
                Salvar
            </button>
        </div>
    </form>
</div>

<div class="mt-4 d-flex flex-row justify-content-around">
    <button>
        <a asp-action="Index">Voltar</a>
    </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
